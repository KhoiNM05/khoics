---
const { title, description, date, readTime } = Astro.props;
---

<html lang="vi">
  <head>    
  </head>
  <body>
    <div class="layout">
      <!-- ✅ Left Sidebar for TOC -->
      <aside class="toc">
        <slot name="toc" /> <!-- TOC slot will be passed from [slug].astro -->
      </aside>

      <!-- ✅ Main Content -->
      <main class="story">
        <header>
          <a href="/khoics/stories"> &#x21bc; ALL STORIES</a>
          <span>{date} &#x2666; {readTime} MIN READ</span>
        </header>

        <h1>{title}</h1>
        <p><em>{description}</em></p>
        <slot /> <!-- Story body -->
      </main>
    </div>
  </body>
</html>

<style>
/* ✅ Global Layout */
.layout {
  display: grid;
  grid-template-columns: 100px 1fr; /* Sidebar fixed, content flexible */
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
  align-items: start;
}


/* ✅ TOC Sidebar (Fixed Left) */

  /* ✅ TOC Sidebar (Fixed Left) */
  .toc {
  position: sticky;
  left: 20px; /* Adjust the distance from the left */
  right: 20px; /* Adjust the distance from the right */
  top: 100px; /* Adjust the distance from the top */
  width: fit-content; /* Ensure enough space */
  background: #fff;
  padding: 10px;
  align-items: center;
  border: 2px solid #ddd;
  border-radius: 10px;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);

  li {
    list-style: none;
    width: 100%; 
    font-size:14px;
    
  }

  a {
    text-color: rgb(58, 52, 58);
    text-decoration: none;
  }

  a:visited {
    color: rgb(58, 52, 58);
  }
  
  ul {
    padding: 0;
    font-size: 12px;
  }

  
}


/* ✅ Main Content (Centered) */
.story {
  align:center;
  width: 800px;
  position: relative;
  max-width: 1000px;
  margin: 0 auto;

}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  margin-bottom: 20px;
  border-bottom: 2px solid #432828;
  padding-bottom: 10px;

}

header a {
  color: rgb(58, 52, 58);
  font-weight: bold;
  text-decoration: none;

}

header span {
  color: rgb(58, 52, 58);
  font-weight: bold;
}

h1 {
  font-size: 35px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
  text-wrap: wrap;
}

p {
  font-size: 16px;
  color: #444;
  text-align: center;
}
</style>
