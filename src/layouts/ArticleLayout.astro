---
const { title, description, date, readTime } = Astro.props;
---

<html>
  <head>
    
    <title>{title}</title>
    <script async id="MathJax-script" src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    <script>
      (window.MathJax as any) = {
        tex: {
          inlineMath: [["$", "$"], ["\\(", "\\)"]],
          displayMath: [["$$", "$$"], ["\\[", "\\]"]],
          font:'TeX',
        },
        svg: { scale: 1.2 },
      };
    </script>
    
    
  </head>
  <body>
    <div class="layout">
      <!-- ✅ Left Sidebar for TOC -->
      <aside class="toc">
        <slot name="toc" /> <!-- TOC slot will be passed from [slug].astro -->
      </aside>

      <!-- ✅ Main Content -->
      <main class="article">
        <header>
          <a href="/articles"> &#x21bc; ALL ARTICLES</a>
          <span>{date} &#x2666; {readTime} MIN READ</span>
        </header>

        <h1>{title}</h1>
        <p><em>{description}</em></p>
        <slot /> <!-- Article body -->
      </main>
    </div>
  </body>
</html>

<style>
/* ✅ Global Layout */
.layout {
  display: grid;
  grid-template-columns: 250px 1fr; /* Sidebar fixed, content flexible */
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
  align-items: start;
}


/* ✅ TOC Sidebar (Fixed Left) */

  /* ✅ TOC Sidebar (Fixed Left) */
.toc {
  position: sticky;
  left: 20px; /* Adjust the distance from the left */
  right: 20px; /* Adjust the distance from the right */
  top: 100px; /* Adjust the distance from the top */
  width: fit-content; /* Ensure enough space */
  background: #fff;
  padding: 10px;
  align-items: center;
  li {
    list-style: none;
    width: 100%; 
  }

  a {
    text-color: #111827;
    text-decoration: none;
  }

  a:visited {
    color: #111827;
  }
  
  ul {
    padding: 0;
    font-size: 12px;
  }

  
}


/* ✅ Main Content (Centered) */
.article {
  max-width: 850px;
  margin: 0 auto;

}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  margin-bottom: 20px;
  border-bottom: 2px solid #432828;
  padding-bottom: 10px;

}

header a {
  color: #2a2e33;
  font-weight: bold;
  text-decoration: none;

}

header span {
  color: #2d1b1b;
  font-weight: bold;
}

h1 {
  font-size: 35px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
  text-wrap: wrap;
}

p {
  font-size: 16px;
  color: #444;
  text-align: center;
}
</style>
