    border-radius: 50%;
  }

  .author-name {
    color: #07273e;
    font-weight:600;
  }
.article-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 40px;
    padding: 20px;
    border-top: 1px solid #ddd;
  }
  .prev-article {
    text-decoration: none;
    color: #000000;
    font-weight: bold;
    text-align: left;
  }

  .next-article {
    text-decoration: none;
    color: #000000;
    font-weight: bold;
    text-align: right;
  }


  .prev-article:hover, .next-article:hover {
    text-decoration: underline;
  }

  #comments {
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }
</style>
