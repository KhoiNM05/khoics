---
import Layout from "../layouts/MainLayout.astro";
import notes from "../data/notes.js";
---

<Layout title="Notes" description="My notes">
  <h1 class="title">Lecture Notes</h1>
  <p class="subtitle">
    These are a selection of my notes from courses. If you're interested in the LaTeX code, have a look on
    <a href="https://github.com/KhoiNM05/Notes" target="_blank">GitHub</a>.
  </p>

  <div class="notes-grid">
    {notes.map((note) => (
      <div class="note-card">
          <div class="note-meta">
            {note.year} ‚Ä¢ {note.language} ‚Ä¢ {note.code} ‚Ä¢ {note.ects} ECTS
          </div>
          <h2 class="note-title">{note.title}</h2>
       
        <h3 class="note-heading">Lecture notes</h3>
        <p class="note-description">{note.description}</p>

        <!-- Download Links -->
        <div class="note-links">
          <a href={note.noteHref} download class="note-link">üìÑ Lecture Notes</a>
          <a href={note.exerciseHref} download class="note-link">‚úèÔ∏è Exercises</a>
          <a href={note.testHref} download class="note-link">üìù Tests</a>
        </div>
      </div> 
    ))}
  </div>
</Layout>

<!-- Styling -->
<style>
  .title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 2rem;
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .note-card {
    background: white;
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    
  }
  .note-card:hover {
    transform: translateY(-5px);
  }
  .note-header {
    font-rendering: optimizeLegibility;
    position: relative;
    height: 100px;
    background-size: auto;
    background-position: ;
    display: flex;
    flex-direction: column;
    color: rgb(58, 52, 58);
    padding: 1em;
    background-blend-mode: overlay;
  }
  .note-meta {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 10px;
  }

  .note-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .note-heading {
    font-size: 1.2rem;
    font-weight: bold;
    margin-top: 10px;
  }

  .note-description {
    font-size: 1rem;
    color: #555;
    margin-bottom: 15px;
  }

  .note-links {
    font-size: 0.9rem;
    display: flex;
    flex-direction: row;
    gap: 5px;
    margin-top: 10px;
  }

  .note-link {
    display: block;
    text-align: center;
    padding: 10px;
    background: #5a5a5a;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.2s;
  }

  .note-link:hover {
    background: #3f3f3f;
  }
  
</style>
