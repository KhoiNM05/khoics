---
<style>
.articles-container {
  max-width: 1500px;
  margin: auto;
  padding: 20px;
}

.article-list {
  list-style: none;
  padding: 0;
}

.article-list li {
  margin-bottom: 15px;
  small {
    font-variant: small-caps;
    font-weight: bold;
    font-size:12px;
  }
  a:visited {
    color: rgb(58, 52, 58);
  }
}

.article-list a {
  text-decoration: none;
  font-size: 20px;
  font-weight: 600;
  
  visited {
    color: rgb(58, 52, 58);
  }
 
}
.unit {
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;

}
.unit:hover {
  transform: translateY(-5px);
}
</style>


<Layout title="Articles" description="Khoi's Articles">

<div class="articles-container">
  <slot>
  <ul class="article-list">
    {sorted.map(article => (
      <li >
        <div class="unit">
        <small>{article.data.date} â€¢ {article.data.readTime} MIN READ</small>
        <br />
        <a href={`/articles/${article.slug}`}>{article.data.title}</a>
        <br />
        <div>
          {article.data.description}
        </div>
        </div>
      </li>
    ))}
  </ul>

</div>

</Layout>
